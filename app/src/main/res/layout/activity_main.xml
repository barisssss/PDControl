<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    tools:context="com.baris.pdcontrol.MainActivity">

    <EditText
        android:id="@+id/ipEditText"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="IP-Adress"
        android:text="192.168.3.120"
        android:inputType="textUri" />

    <EditText
        android:id="@+id/portEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="230dp"
        android:hint="Port"
        android:text="8887"
        android:inputType="number" />

    <Button
        android:id="@+id/connectBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ipEditText"
        android:background="@color/colorPrimary"
        android:onClick="startOsc"
        android:text="Connect"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <org.honorato.multistatetogglebutton.MultiStateToggleButton
        android:id="@+id/wavesToggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/connectBtn"
        app:values="@array/waves_array"
        app:mstbColorPressedBackground="@color/colorPrimaryDark"
        app:mstbColorPressedBackgroundResource="@color/colorPrimaryDark"
        app:mstbColorPressedText="@color/white"
        app:mstbColorNotPressedBackground="@color/colorPrimary"
        app:mstbColorNotPressedBackgroundResource="@color/colorPrimary"
        app:mstbColorNotPressedText="@color/white"
        />


    <TextView
        android:id="@+id/atkText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wavesToggle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:text="Attack: " />

    <SeekBar
        android:id="@+id/attackBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/atkText"
        android:max="300"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/dcyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attackBar"
        android:text="Decay: " />

    <SeekBar
        android:id="@+id/decayBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dcyText"
        android:max="500"/>

    <TextView
        android:id="@+id/sstText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/decayBar"
        android:text="Sustain: " />

    <SeekBar
        android:id="@+id/sustainBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sstText"/>

    <TextView
        android:id="@+id/rlsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sustainBar"
        android:text="Release: " />

    <SeekBar
        android:id="@+id/releaseBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rlsText"
        android:max="1000"/>

    <TextView
        android:id="@+id/freqText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/releaseBar"
        android:layout_marginTop="19dp"
        android:text="Frequency: " />

    <com.ramotion.fluidslider.FluidSlider
        android:id="@+id/freqFluid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/freqText"
        android:layout_centerHorizontal="true"
        app:bar_color="@color/colorAccent"
        app:size="normal"/>

</RelativeLayout>
